!record 5 of $my_dir
!!@#Chargez le fichier !!#@
  <tt $st>images/$audio_file</tt>
!record 6 of $my_dir
!!@#dans le dossier!!#@
  <tt $st>images</tt></li>
!endif
!if $image_file notsametext and $image_file notsametext no
  <li>
!record 5 of $my_dir
!!@#Chargez le fichier image!!#@
   <tt $st>images/$image_file</tt> 
!record 6 of $my_dir
!!@#dans le dossier!!#@
   <tt $st>images</tt></li>
!endif
!if http notwordof $video_file and $video_file notsametext  and $video_file notsametext no
  <li>
!record 5 of $my_dir
!!@#Chargez le fichier video!!#@
    <tt $st>$video_file</tt>
!record 6 of $my_dir
!!@# dans le dossier !!#@
   <tt $st>images</tt></li>
!endif
</ul>
