!set size=50

!if $title=$empty or $modreq=.new
 !set this=你的新模块
!else
 !set this=目前开发中的模块
!endif
!form reply
<input type=hidden name=jobreq value=flist>
$table_header
<caption>$this的属性</caption>

$table_tr<td align=right nowrap>地址
 <td>
 !if $title!=$empty and $modreq!=.new
  <tt>$modreq</tt>&nbsp;
  !href cmd=reply&jobreq=move&original=devel/$auth_login/$modreq 改名
&nbsp;
  !href cmd=reply&jobreq=copy&original=devel/$auth_login/$modreq 复制
 !else
  !set modreq=.new
  !read scripts/addressform.phtml nook
 !endif

$table_tr<td align=right nowrap><label for="i_title">名称</label>
 <td><input size=$size name=i_title id="i_title" value="$i_title">

$table_tr<td align=right nowrap><label for="i_description">描述</label>
 <td><input size=$size name=i_description id="i_description" value="$i_description">

$table_tr<td align=right nowrap><label for="i_language">语言</label>
 <td>
 !default i_language=$module_language
 !formselect i_language list $langlist prompt $langname

$table_tr<td align=right nowrap><label for="i_category">类型</label>
 <td nowrap>
 !set wims_formselect_switch=multiple
 !formcheckbox i_category list exercise,tool,document,recreation,oef,deductio

$table_tr<td align=right nowrap><label for="i_domain">领域</label>
 <td>
 <input size=$size name=i_domain id="i_domain" value="$i_domain">

$table_tr<td align=right nowrap><label for="ilevel">年级</label>
 <td>
 !formcheckbox i_level list $levellist
 <br><small>E: 小学; H: 中学; U: 大学;
 <br>G: 研究生; R: 研究工作</small>

$table_tr<td align=right nowrap><label for="i_scoring">评分机制<br></label>
 <small>(练习/游戏)</small>
 <td>
 !default i_scoring=no
 !formradio i_scoring list yes,no prompt 是, 不

$table_tr<td align=right nowrap><label for="i_version">版本</label>
 <td>
 !default i_version=1.00
 <input type=text size=6 name=i_version id="i_version" value="$i_version">
 <small>当你发布新版本时别忘了增加版本号!</small>

$table_tr<td align=right nowrap><label for="i_wims_version">WIMS版本号</label>
 <td>
 !default i_wims_version=$wims_version
 <input type=text size=6 name=i_wims_version id="i_wims_version" value="$i_wims_version">&nbsp;
 !href cmd=help&special_parm=wimsversion 帮助

$table_tr<td align=right nowrap><label for="i_author">作者</label>
 <td>
 !default i_author=$auth_name
 <input type=text size=$size name=i_author id="i_author" value="$i_author">

$table_tr<td align=right nowrap><label for="i_adress">作者电邮</label>
 <td>
 !default i_address=$auth_email
 <input type=text size=$size name=i_address id="i_address" value="$i_address">

$table_tr<td align=right nowrap><label for="i_translator">翻译者</label>
 <td>
 <input type=text size=$size name=i_translator id="i_translator" value="$i_translator">

$table_tr<td align=right nowrap><label for="i_translator_address">翻译者电邮</label>
 <td>
 <input type=text size=$size name=i_translator_address id="i_translator_address" value="$i_translator_address">

$table_tr<td align=right nowrap><label for="i_require">对支持软件的要求</label>
 <td>
 !formcheckbox i_require list $swlist prompt $swname

$table_tr<td align=right nowrap><label for="i_keywords">关键词</label>
 <td><input size=$size name=i_keywords id="i_keywords" value="$i_keywords">

$table_tr<td align=right nowrap><label for="i_copyright">版权</label>
 <td>
 !set wims_formselect_switch=
 !formselect i_copyright list gnu prompt GNU GPL

$table_hdtr<td align=center nowrap colspan=2>
<input type=submit name=inddef value="$wims_name_tosave">
&nbsp;&nbsp;
<input type=submit value="$wims_name_giveup">
$table_end
</form>

