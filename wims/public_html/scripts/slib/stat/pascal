!if $wims_read_parm!=slib_header
!goto proc
!endif

slib_parms=3\
,m\
,n\
,p

slib_author=Bernadette PERRIN-RIOU

slib_example= 20,4,0.3\
[10,5],4,0.3
slib_require=octave
!exit

:proc
slib_out=

!distribute  item $wims_read_parm into slib_data,slib_a,slib_b
slib_data=!declosing $slib_data
slib_cnt=!itemcnt $slib_data
!if $slib_cnt=1
	slib_data=1,$slib_data
!endif	
slib_out=!exec octave pascal_rnd($slib_a,$slib_b,$slib_data)
!!slib_out=!exec octave nbinrnd($slib_a,$slib_b,$slib_data)

slib_out=!trim $slib_out
slib_out=!replace internal $\
$ by ; in $slib_out
slib_out=!words2items $slib_out
