<center>$classname
<h1>$livret_title</h1></center>

!if $usercnt==0
 Cette classe n'a pas encore de participant.
 !exit
!endif
!if $livret_nbcomp==0
 Il n'y a aucune comp&eacute;tence dans ce livret !
 !exit
!endif
!default note=0
<p>
$table_header
 $table_hdtr
   <th rowspan=2>Nom, prénom</th>
   !for k=1 to $livret_nbcomp
    !let desc=!record $k of wimshome/log/classes/$wims_class/livret/.comps
    <th valign=center colspan=$livret_nbpalier>
     !href cmd=renew&job=addcomp&comp=$k Comp&eacute;tence $k
     <a onmouseover="Tip('$desc',$tooltip_parm)"> ? </a>
    </th>
   !next k
 </tr>
 $table_hdtr
  !for k=1 to $livret_nbcomp
   !for j=1 to $livret_nbpalier
    !let desc=!record $j of wimshome/log/classes/$wims_class/livret/.comp$k
    !let desc=!line 1 of $desc
    <th valign=center><a onmouseover="Tip('$desc',$tooltip_parm)">P $j</a></th>
   !next j
  !next k
 </tr>    
 !for i=1 to $usercnt
  !set uu=!record $i of wimshome/log/classes/$wims_class/.userlist
  !distribute items $uu into lastname,firstname,uu
  $table_tr
   <td>
    !href cmd=reply&job=user&user=$uu $lastname,$firstname
   </td>
   !for k=1 to $livret_nbcomp
    !for j=1 to $livret_nbpalier
     !let note=$[rint($(l_$(uu)_$(k)_$(j)))]
     <td align="center" style="background-color: $(livret_color[$note+1])">$note</td>
    !next j
   !next k
  </tr>
 !next i
$table_end

