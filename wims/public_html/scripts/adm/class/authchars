# the asterisk * is not allowed. Used to signal crypted passwords.

!set char_lower=abcdefghijklmnopqrstuvwxyz
!set char_upper=!upper $char_lower
!set char_alpha=$char_lower$char_upper
!set char_digit=0123456789
!set char_alnum=$char_alpha$char_digit
!set char_punct=.;:^-_#%~@

!set char_login=$char_punct$char_alnum
!set char_passwd=$char_punct$char_alnum
!set login_min=4
!set login_max=24
!set passwd_min=4
!set passwd_max=40
